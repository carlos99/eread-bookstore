<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@author, :html => {class: 'form-horizontal'}) do |f| %>
        <div class="form-group">
          <div class="col-md-3">
            <label for="first_name" class="control-label">First Name</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :first_name, class: 'form-control', hide_label: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3">
            <label for="last_name" class="control-label">Last Name</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :last_name, class: 'form-control', hide_label: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn bt-default'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
