<section class="row-no-margin">
  <div class="container">
    <h3 class="text-center titles form-titles h3-specials">Sign in</h3>
      <div class="col-md-6 col-md-offset-3 container-forms-user">
        <%= bootstrap_form_tag url: sign_in_path, html: { class: 'new-general-form' } do |f| %>

            <div class='form-group'>
                <%= f.email_field :email, class: 'form-control sign-up-login-inputs', placeholder: 'Email', hide_label: true, required: true %>
            </div>

            <div class='form-group'>
                <%= f.password_field :password, class: 'form-control sign-up-login-inputs', placeholder: 'Password', hide_label: true, required: true %>
            </div>
            <div class="form-group form-btns">
              <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <%= f.submit "Sign in", class:'btn btn-success' %>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <p> Or </p>
              </div>
              <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <%= link_to "Sing Up", sign_up_path, class: 'btn btn-success' %>
              </div>
            </div>

            <div class="form-group">
             <div class="col-md-8 f-passwordc">
               <%= link_to "Forgotten Password?", reset_password_path, class: "f-password" %>
             </div>
           </div>
        <% end %>
      </div>
  </div>
</section>
