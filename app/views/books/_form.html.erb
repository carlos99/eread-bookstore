<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@book, :html => {class: 'form-horizontal'}) do |f| %>

        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <div class="col-md-3">
            <%= f.label :first_name, class: 'control-label'%>
          </div>
          <div class="col-md-9">
            <%= f.text_field :first_name, class: 'form-control', hide_label: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-3">
            <%= f.label :last_name, class: 'control-label'%>
          </div>
          <div class="col-md-9">
            <%= f.text_field :last_name, class: 'form-control', hide_label: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn bt-default'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
