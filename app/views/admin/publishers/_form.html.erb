<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 book-form-container">
      <%= form_for([:admin, @publisher], :html => {class: 'new-general-form'}) do |f| %>
        <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Publisher Name', hide_label: true %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
