<div class="container-fluid">
  <table class="table table-striped table-bordered table-hover">
  <tbody>
   <thead>
    <tr>
      <th class="center">Title</th>
      <th class="center">Published At</th>
      <th class="center">Price</th>
      <th class="center">Pages</th>
      <th class="center">Actions</th>
    </tr>
   </thead>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.published_at %></td>
        <td><%= book.price%></td>
        <td><%= book.page_count%></td>
          <td class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Show', admin_book_path(book), class: "btn btn-show" %></li>
              <li><%= link_to 'Edit', edit_admin_book_path(book), class: "btn btn-edit" %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Destroy', admin_book_path(book), class: "btn btn-destroy", method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>

  <%= link_to "Add New Book", new_admin_book_path %>

</div>
