<div class="container">
    <div class="col-md-6 col-md-offset-3 book-form-container">
      <%= bootstrap_form_for(@user, html: {class: 'new-general-form' , role: "form"}) do |f| %>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
            <%= f.text_field :first_name, class: 'form-control', hide_label: true, placeholder: 'First Name' %>
        </div>

        <div class="form-group">
            <%= f.text_field :last_name, class: 'form-control', hide_label: true, placeholder: 'Last Name' %>
        </div>

        <div class="form-group">
            <%= f.email_field :email, class: 'form-control', hide_label: true, placeholder: 'Email' %>
        </div>

        <div class="form-group">
            <%= f.password_field :password, class: 'form-control', hide_label: true, placeholder: 'Password' %>
        </div>

        <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control', hide_label: true, placeholder: 'Confirm Password' %>
        </div>

      <%= f.fields_for :addresses do |address| %>
         <div class='form-group'>
           <label for="address_line1" class="control-label col-md-3">Address</label>
           <div class='col-md-9'>
             <%= address.text_field :address_line1, class: 'form-control',id: 'address_line1', hide_label: true %>
           </div>
         </div>

         <div class='form-group'>
           <label for="address_line2" class="control-label col-md-3"></label>
           <div class='col-md-9'>
             <%= address.text_field :address_line2, class: 'form-control',id: 'address_line2', hide_label: true %>
           </div>
         </div>

         <div class='form-group'>
           <label class="control-label col-md-3">City</label>
           <div class='col-md-9'>
             <%= address.text_field :city, class: 'form-control', hide_label: true %>
           </div>
         </div>

         <div class='form-group'>
           <label for="zipcode" class="control-label col-md-3">Postal Code</label>
           <div class='col-md-9'>
             <%= address.text_field :zipcode, class: 'form-control',id: 'zipcode', hide_label: true %>
           </div>
         </div>
      <% end %>

        <div class="form-group">
          <%= f.submit 'Sign Up', class: 'btn btn-success'%> Or
          <%= link_to "Sing In", sign_in_path, class: 'sign-up-link' %>
        </div>
      <% end %>
    </div>
</div>
