<div class="container">
    <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 container-forms-user">
      <%= bootstrap_form_for(@user, html: {class: 'new-general-form' , role: "form"}) do |f| %>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
            <%= f.text_field :first_name, class: 'form-control sign-up-login-inputs', hide_label: true, placeholder: 'First Name', required: true %>
        </div>

        <div class="form-group">
            <%= f.text_field :last_name, class: 'form-control sign-up-login-inputs', hide_label: true, placeholder: 'Last Name', required: true %>
        </div>

        <div class="form-group">
            <%= f.email_field :email, class: 'form-control sign-up-login-inputs', hide_label: true, placeholder: 'Email', required: true %>
        </div>

        <div class="form-group">
            <%= f.password_field :password, class: 'form-control sign-up-login-inputs', hide_label: true, placeholder: 'Password', required: true %>
        </div>

        <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control sign-up-login-inputs', hide_label: true, placeholder: 'Confirm Password', required: true %>
        </div>

        <div class="form-group form-btns">
          <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <%= f.submit 'Sign Up', class: 'btn btn-success'%>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <p> Or </p>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
            <%= link_to "Sing In", sign_in_path, class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
</div>
