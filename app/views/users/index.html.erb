<div class="container">

  <% @users.each do |user| %>
      <div class="row">
        <div class="col-md-4">
          <%= user.first_name %>
        </div>
        <div class="col-md-4">
          <%= user.last_name %>
        </div>

        <div class="col-md-4">
          <%= link_to user.email, user %><br>
        </div>
      </div>

    <% end %>

  <%= link_to "Add New Author", new_user_path %>

</div>
