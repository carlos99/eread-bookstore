<section class="newest-book container-fluid">
  <div class="row">
    <h2 class="sub-titles">RECENT BOOKS</h2>
  </div>

  <%@books.each do |book| %>
    <div class="recent-book-container">
      <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
        <%= image_tag(book.book_cover_url, class: 'img-responsive img-ft') if book.book_cover? %>
        <p class="newest-book-title">
          <%= book.title %>
        </p>
        <p class="newest-price">
          $ <%= book.price%>
        </p>
      </div>
    </div>
  <% end %>
