<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@publisher, :html => {class: 'form-horizontal publisher-frm'}) do |f| %>
        <div class="form-group">
          <div class="col-md-9">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Publisher Name', hide_label: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn bt-default general-button'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
