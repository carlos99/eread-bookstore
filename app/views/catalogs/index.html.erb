<div class="container">
  <h1>Catalog Index Page</h1>

  <section>
   <header>
     <% if @books.empty? %>
       <h3>No Books Entered</h3>
     <% else %>
       <h3 class="titles text-center">All Books</h3>
     <% end %>
   </header>

  <div class="row paginate-catalog">
    <div id="paginate">
      <%= will_paginate @books, render: BootstrapPagination::Rails%>
    </div>
  </div>

   <% @books.each do |book| %>
      <div class="col-md-6">
        <p class='newest-book-title'>
          <%= link_to book.title, catalog_path(book) %><br>
          <p class='newest-price'><%= number_to_currency(book.price) %></p>
        </p>
        <p class='book-image'>
          <%= image_tag(book.book_cover_url, class: 'img-responsive img-ft') if book.book_cover? %>
        </p>
      </div>
   <% end %>
   <br>
  </section>

</div>
